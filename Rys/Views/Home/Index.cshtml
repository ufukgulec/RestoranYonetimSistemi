@{
    ViewData["Title"] = "Home Page";
}

<!--Person Info and Search Input Start-->
<div class="row pt-3">
    <div class="col-md-6 personInfo">
        <i class="bi bi-person-circle"></i>Merhaba,Ufuk
    </div>
    <div class="col-md-6 p-0">
        <form class="searchForm" action="">
            <input type="text"
                   name=""
                   id=""
                   placeholder="Arama yapın..."
                   class="form-control" />
            <i class="bi bi-search searchIcon"></i>
        </form>
    </div>
</div>
<!--Person Info and Search Input End-->
<!--Sale/Earn/Total Start-->
<div class="row mt-3 bg-white whiteRow shadow-sm">
    <div class="col-lg-4 border-end">
        <a href="" class="d-lg-flex d-grid">
            <i class="bi bi-bell-fill mx-auto mx-lg-0"></i>
            <span><b>2</b> Yeni Sipariş</span>
        </a>
    </div>
    <div class="col-lg-4 border-end">
        <a href="" class="d-lg-flex d-grid">
            <i class="bi bi-cash-stack mx-auto mx-lg-0"></i>
            <span><b>200 ₺</b> Kazanılan Para</span>
        </a>
    </div>
    <div class="col-lg-4">
        <a href="" class="d-lg-flex d-grid">
            <i class="bi bi-arrow-repeat mx-auto mx-lg-0"></i>Yenile
        </a>
    </div>
</div>
<!--Sale/Earn/Total End-->
<!--Chart and Card Start-->
<div class="row gx-3 mt-3 charts">
    <div class="col-lg-8 ps-0">
        <div class="p-3 bg-white whiteCol shadow-sm h-100 d-flex align-items-center">
            <canvas class="my-4 w-100"
                    id="myChart"
                    width="900"
                    height="380"></canvas>
        </div>
    </div>
    <div class="col-lg-4 pe-0 mt-3 mt-md-0">
        <div class="p-3 bg-white whiteCol shadow-sm">
            <div class="card border-0">
                <div class="card-body">
                    <h4 class="small font-weight-bold">
                        Server Migration <span class="float-right">20%</span>
                    </h4>
                    <div class="progress mb-4">
                        <div class="progress-bar bg-danger"
                             role="progressbar"
                             style="width: 20%"
                             aria-valuenow="20"
                             aria-valuemin="0"
                             aria-valuemax="100"></div>
                    </div>
                    <h4 class="small font-weight-bold">
                        Sales Tracking <span class="float-right">40%</span>
                    </h4>
                    <div class="progress mb-4">
                        <div class="progress-bar bg-warning"
                             role="progressbar"
                             style="width: 40%"
                             aria-valuenow="40"
                             aria-valuemin="0"
                             aria-valuemax="100"></div>
                    </div>
                    <h4 class="small font-weight-bold">
                        Customer Database <span class="float-right">60%</span>
                    </h4>
                    <div class="progress mb-4">
                        <div class="progress-bar"
                             role="progressbar"
                             style="width: 60%"
                             aria-valuenow="60"
                             aria-valuemin="0"
                             aria-valuemax="100"></div>
                    </div>
                    <h4 class="small font-weight-bold">
                        Payout Details <span class="float-right">80%</span>
                    </h4>
                    <div class="progress mb-4">
                        <div class="progress-bar bg-info"
                             role="progressbar"
                             style="width: 80%"
                             aria-valuenow="80"
                             aria-valuemin="0"
                             aria-valuemax="100"></div>
                    </div>
                    <h4 class="small font-weight-bold">
                        Account Setup
                        <span class="float-right">Complete!</span>
                    </h4>
                    <div class="progress">
                        <div class="progress-bar bg-success"
                             role="progressbar"
                             style="width: 100%"
                             aria-valuenow="100"
                             aria-valuemin="0"
                             aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--Chart and Card End-->
<!--Optins and Details Start-->
<div class="row gx-3 mt-3 options">
    <div class="col-lg-4 ps-0 mt-3 mt-md-0">
        <div class="p-3 bg-white whiteCol shadow-sm">
            <a href="">
                <i class="bi bi-gear-fill"></i>
                Ayarlar
            </a>
        </div>
    </div>
    <div class="col-lg-4 mt-3 mt-md-0">
        <div class="p-3 bg-white whiteCol shadow-sm">
            <a href="">
                <i class="bi bi-building"></i>
                Restoran
            </a>
        </div>
    </div>
    <div class="col-lg-4 pe-0 mt-3 mt-md-0">
        <div class="p-3 bg-white whiteCol shadow-sm">
            <a href="">
                <i class="bi bi-person-circle"></i>
                Kullanıcı
            </a>
        </div>
    </div>
</div>
<!--OPtions and Details End-->
