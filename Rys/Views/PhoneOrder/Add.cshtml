@{
    ViewData["Title"] = "Add";
}
@using EntityLayer.Concrete;
@model List<Category>

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Accordion -->
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <h5 class="card-header">Kategori Seçimi</h5>
                <div class="card-body bb">

                    @foreach (var item in Model.OrderByDescending(x => x.Products.Count))
                    {
                        <div class="card card-1 text-center mb-3 me-1 w-50">
                            <div class="card-body">
                                <h5 class="card-title">Special title treatment</h5>
                                <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                                <a href="javascript:void(0)" class="btn btn-primary">Go somewhere</a>
                            </div>
                        </div>
                    }

                </div>
            </div>
            <div class="nav-align-top mt-4">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <button type="button" class="nav-link active" role="tab" data-bs-toggle="tab" data-bs-target="#navs-top-home" aria-controls="navs-top-home" aria-selected="false">
                            Ürün Seçimi
                        </button>
                    </li>
                    @foreach (var item in Model)
                    {
                        <li class="nav-item">
                            <button type="button" class="nav-link" role="tab" data-bs-toggle="tab" data-bs-target="#navs-top-@item.Name" aria-controls="navs-top-home" aria-selected="false">
                                @item.Name
                            </button>
                        </li>
                    }
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade active show" id="navs-top-home" role="tabpanel">
                        <p>
                            Ürün seçimi bilgi
                        </p>
                        <p class="mb-0">
                            Ürün seçimi nasıl çalışır
                        </p>
                    </div>
                    @foreach (var item in Model)
                    {
                        <div class="tab-pane fade" id="navs-top-@item.Name" role="tabpanel">
                            @foreach (var p in item.Products)
                            {
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title">@p.Name</h5>
                                        <div class="card-subtitle text-muted mb-3">Card subtitle</div>
                                        <p class="card-text">
                                            @p.Description
                                        </p>
                                        <a href="javascript:void(0)" class="card-link">Card link</a>
                                        <a href="javascript:void(0)" class="card-link">Another link</a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4">
            Sepet
        </div>
    </div>
    <!--/ Accordion -->
    <!--/ Advance Styling Options -->
</div>