@{
    ViewData["Title"] = "Add";
}
@using EntityLayer.Concrete
@model List<District>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Bölge /</span> Yeni Bölge</h4>
    <!-- Layout Demo -->
    <div class="col-xxl">
        <div class="nav-align-top mb-4">
            <ul class="nav nav-tabs nav-fill" role="tablist">
                <li class="nav-item">
                    <button type="button" class="nav-link active d-inline-flex align-items-center justify-content-center" role="tab" data-bs-toggle="tab" data-bs-target="#navs-justified-home" aria-controls="navs-justified-home" aria-selected="false">
                        <i class="tf-icons bx bx-info-circle me-1"></i> Bilgilendirme
                    </button>
                </li>
                <li class="nav-item">
                    <button type="button" class="nav-link d-inline-flex align-items-center justify-content-center" role="tab" data-bs-toggle="tab" data-bs-target="#navs-justified-profile" aria-controls="navs-justified-profile" aria-selected="true">
                        <i class="tf-icons bx bx-map me-1"></i> Mahalle Ekleme
                    </button>
                </li>
                <li class="nav-item">
                    <button type="button" class="nav-link d-inline-flex align-items-center justify-content-center" role="tab" data-bs-toggle="tab" data-bs-target="#navs-justified-messages" aria-controls="navs-justified-messages" aria-selected="false">
                        <i class="tf-icons bx bx-map-pin me-1"></i> Sokak Ekleme
                    </button>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade active show" id="navs-justified-home" role="tabpanel">
                    <p>
                        Icing pastry pudding oat cake. Lemon drops cotton candy caramels cake caramels sesame snaps
                        powder. Bear claw candy topping.
                    </p>
                    <p class="mb-0">
                        Tootsie roll fruitcake cookie. Dessert topping pie. Jujubes wafer carrot cake jelly. Bonbon
                        jelly-o jelly-o ice cream jelly beans candy canes cake bonbon. Cookie jelly beans marshmallow
                        jujubes sweet.
                    </p>
                </div>
                <div class="tab-pane fade" id="navs-justified-profile" role="tabpanel">
                    @using (Html.BeginForm("AddDistrict", "Region", FormMethod.Post))
                    {
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Mahalle Adı</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-fullname2" class="input-group-text">
                                        <i class="bx bx-category"></i>
                                    </span>

                                    <input type="text" class="form-control" id="defaultFormControlInput" placeholder="Cumhuriyet" name="Name" aria-describedby="defaultFormControlHelp">
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-success d-inline-flex align-items-center">
                                    <span class="tf-icons bx bx-plus-circle me-1"></span>Ekle
                                </button>
                                <button type="reset" class="btn btn-danger d-inline-flex align-items-center">
                                    <span class="tf-icons bx bx-brush-alt me-1"></span>Temizle
                                </button>
                            </div>
                        </div>
                    }
                </div>
                <div class="tab-pane fade" id="navs-justified-messages" role="tabpanel">
                    @using (Html.BeginForm("AddStreet", "Region", FormMethod.Post))
                    {
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Sokak Adı</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-fullname2" class="input-group-text">
                                        <i class="bx bx-category"></i>
                                    </span>

                                    <input type="text" class="form-control" id="defaultFormControlInput" placeholder="Cumhuriyet" name="Name" aria-describedby="defaultFormControlHelp">
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="exampleFormControlSelect1" class="col-sm-2 col-form-label">Mahalle Seç</label>
                            <div class="col-sm-10">
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-fullname2" class="input-group-text">
                                        <i class="bx bx-category"></i>
                                    </span>
                                    <select class="form-select form-control" id="exampleFormControlSelect1" aria-label="Default select example" name="DistrictId">
                                        <option selected="">Bir Mahalle Seçiniz...</option>
                                        @foreach (var item in Model)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>

                        </div>
                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-success d-inline-flex align-items-center">
                                    <span class="tf-icons bx bx-plus-circle me-1"></span>Ekle
                                </button>
                                <button type="reset" class="btn btn-danger d-inline-flex align-items-center">
                                    <span class="tf-icons bx bx-brush-alt me-1"></span>Temizle
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!--/ Layout Demo -->
</div>
