@using EntityLayer.Concrete;
@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid position-relative p-0 p-md-3">
    <!--Tables Start-->
    <div class="row p-0 mt-3">
        <div class="col ps-0 whiteCol bg-white">
            <table class="table table-hover table-bordered align-middle text-center">
                <thead>
                    <tr>
                        <th scope="col">Kategori Adı</th>
                        <th scope="col">Ürün Sayısı</th>
                        <th scope="col">Durumu</th>
                        <th scope="col">Güncelle</th>
                        <th scope="col">Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.Name</th>
                            <th>@item.Products.Count</th>
                            <td>
                                @if (item.Status)
                                {
                                    <span class="badge alert-success">Açık Kategori</span>
                                }
                                else
                                {
                                    <span class="badge alert-danger">Kapalı Kategori</span>
                                }

                            </td>
                            <td>
                                <a href="/Category/Details/@item.Id"
                               class="btn btn-main text-white w-100">Güncelle</a>
                            </td>
                            <td>
                                <a href="category.html"
                               class="btn btn-danger text-white w-100">Sil</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

    <!--Tables End-->
</div>