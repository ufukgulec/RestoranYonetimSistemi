@using EntityLayer.Concrete;
@model Category
@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid p-0 p-md-3">
    <div class="row p-0 mt-3">
        <div class="col">
            <form method="post">
                <input type="hidden" value="@Model.Id" name="Id" />
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Kategori Adı</label>
                    <input type="text"
                           class="form-control shadow-sm"
                           id="exampleInputPassword1"
                           name="Name"
                           value="@Model.Name" />
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlTextarea1"
                           class="form-label">Kategori Açıklama</label>
                    <textarea class="form-control shadow-sm"
                              id="exampleFormControlTextarea1"
                              name="Description"
                              rows="3">@Model.Description</textarea>
                </div>
                <div class="mb-3">
                    @if (Model.Status)
                    {
                        <div class="form-check">
                            <input class="form-check-input"
                               type="radio"
                               name="Status"
                               value="true"
                               checked
                               id="flexRadioDefault1" />
                            <label class="form-check-label" for="flexRadioDefault1">
                                Açık Kategori
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input"
                               type="radio"
                               name="Status"
                               value="false"
                               id="flexRadioDefault2" />
                            <label class="form-check-label" for="flexRadioDefault2">
                                Kapalı Kategori
                            </label>
                        </div>
                    }
                    else
                    {
                        <div class="form-check">
                            <input class="form-check-input"
                               type="radio"
                               name="Status"
                               value="true"
                               id="flexRadioDefault1" />
                            <label class="form-check-label" for="flexRadioDefault1">
                                Açık Kategori
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input"
                               type="radio"
                               checked
                               name="Status"
                               value="false"
                               id="flexRadioDefault2" />
                            <label class="form-check-label" for="flexRadioDefault2">
                                Kapalı Kategori
                            </label>
                        </div>
                    }
                </div>

                <button type="submit" class="btn btn-primary">
                    Kaydet
                </button>
                <button type="submit" class="btn btn-danger">
                    Kategoriyi Sil
                </button>
            </form>
        </div>
    </div>
</div>
