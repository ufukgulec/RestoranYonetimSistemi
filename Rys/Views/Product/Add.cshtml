@using EntityLayer.Concrete;
@model Product
@{
    ViewData["Title"] = "Add";
}
<div class="container-fluid p-0 p-md-3">
    <div class="row p-0 mt-3">
        <div class="col">
            <form method="post">
                <div class="mb-3">
                    <label for="exampleInputEmail1"
                           class="form-label">Ürün Adı</label>
                    <input type="text"
                           class="form-control shadow-sm"
                           id="exampleInputEmail1"
                           name="Name" />
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Ürün Fiyatı ₺</label>
                    <input type="text"
                           name="Price"
                           class="form-control shadow-sm" />
                </div>
                <div class="mb-3">
                    <label for="exampleInputSelect" class="form-label">Ürün Kategori</label>
                    <select class="form-select shadow-sm"
                            name="CategoryId"
                            aria-label="Default select example"
                            id="exampleInputSelect">
                        @foreach (var item in @ViewData["Categories"] as List<Category>)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlTextarea1"
                           class="form-label">Ürün Açıklama</label>
                    <textarea class="form-control shadow-sm"
                              id="exampleFormControlTextarea1"
                              name="Description"
                              rows="3"></textarea>
                </div>
                <div class="mb-3">

                        <div class="form-check">
                            <input class="form-check-input"
                               type="radio"
                               name="Status"
                               value="true"
                               id="flexRadioDefault1" />
                            <label class="form-check-label" for="flexRadioDefault1">
                                Açık Ürün
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input"
                               type="radio"
                               name="Status"
                               value="false"
                               id="flexRadioDefault2" />
                            <label class="form-check-label" for="flexRadioDefault2">
                                Kapalı Ürün
                            </label>
                        </div>
                </div>

                <button type="submit" class="btn btn-primary">
                    Kaydet
                </button>
                <button type="submit" class="btn btn-danger">
                    Ürünü Sil
                </button>
            </form>
        </div>
    </div>
</div>
